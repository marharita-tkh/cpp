#include <unistd.h>
#include "iostream"

using namespace std;

string s_text;
int s_left;

int getTime();

int main()
{
    cout
            << "obratniy otschet"
            << endl;
    while (s_left == 0){s_left = getTime();}
    for (int i = s_left; i > -1; --i) {
        cout << to_string(i) << endl;
        sleep(1);
        if (i == 0){cout<<"end";}
    }
    return 1;
}

int getTime() {
    cout << "skolko" << endl;
    cin >> s_text;
    try {stoi(s_text);}
    catch (invalid_argument){
        cout << "-." << endl;
        return 0;
    }
    return stoi(s_text);
}
